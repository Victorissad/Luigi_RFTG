<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark">

    <!-- En-tÃªte avec titre et panier - Style rÃ©tro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/retro_light">

        <ImageButton
            android:id="@+id/btnRetour"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="@color/retro_cyan"
            android:contentDescription="Retour"/>

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸŽ¬ CATALOGUE"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/retro_cyan"
            android:shadowColor="@color/retro_pink"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:gravity="center"/>

        <!-- Bouton de dÃ©connexion -->
        <ImageButton
            android:id="@+id/btnDeconnexion"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_lock_power_off"
            android:tint="@color/retro_orange"
            android:onClick="onDeconnexionClicked"
            android:contentDescription="DÃ©connexion"/>

        <!-- Badge du panier avec compteur - IcÃ´ne rÃ©tro -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnPanier"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_retro_cart"
                android:onClick="onPanierClicked"
                android:contentDescription="Panier"/>

            <!-- Badge de compteur - Style rÃ©tro -->
            <TextView
                android:id="@+id/tvPanierBadge"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="top|end"
                android:background="@drawable/retro_badge_background"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="gone"/>

        </FrameLayout>
    </LinearLayout>

    <!-- Barre de recherche - Style rÃ©tro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/retro_light"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ðŸ” Rechercher un titre..."
            android:padding="14dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/retro_cyan"
            android:background="@drawable/retro_edittext_background"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionSearch"/>
    </LinearLayout>

    <!-- FrameLayout pour superposer la liste et le loader -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ListView des films -->
        <ListView
            android:id="@+id/listeFilms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <!-- ProgressBar de chargement -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/retro_cyan"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>
